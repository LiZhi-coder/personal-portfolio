FROM node:22-alpine AS build

WORKDIR /app

COPY apps/boolcore/frontend/package.json apps/boolcore/frontend/package-lock.json ./
RUN npm ci

COPY apps/boolcore/frontend/ ./
RUN npm run build

FROM nginx:1.27-alpine

COPY infra/nginx/boolcore.conf /etc/nginx/conf.d/default.conf
COPY --from=build /app/dist /usr/share/nginx/html

EXPOSE 80
